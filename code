#include <EEPROM.h> 
char data = 0; 
int r1; int r2; int r3; int r4; int a1=0; 
void setup() 
{   pinMode(8,OUTPUT);   pinMode(9,OUTPUT);   pinMode(10,OUTPUT);   pinMode(11,OUTPUT);   Serial.begin(9600); EEPROM.get(0, r1); EEPROM.get(1, r2); EEPROM.get(2, r3);   EEPROM.get(3, r4); digitalWrite(8,r1);  digitalWrite(9,r2);  digitalWrite(10,r3);  digitalWrite(11,r4);  }  void loop() {   if(Serial.available() > 0)  // Send data only when you receive data:   {     data = Serial.read();           Serial.print(data);             Serial.print("\n");                  if(data=='1')     {      digitalWrite(8,HIGH);  EEPROM.write(0, 1);           delay(100);      }   if(data=='2')     {      digitalWrite(8,LOW);  EEPROM.write(0, 0);                delay(100);      } if(data=='3')     {      digitalWrite(9,HIGH);  EEPROM.write(1, 1);                delay(100);      }   if(data=='4')     {      digitalWrite(9,LOW);       EEPROM.write(1, 0);             delay(100);      }  if(data=='5')     {      digitalWrite(10,HIGH);  EEPROM.write(2, 1);                delay(100);      }   if(data=='6')     {      digitalWrite(10,LOW);  EEPROM.write(2, 0);         delay(100);      }  if(data=='7')     {      digitalWrite(11,HIGH);  EEPROM.write(3, 1);                delay(100);      }   if(data=='8')     {      digitalWrite(11,LOW);  EEPROM.write(3, 0);                delay(100);       }  if(data=='9' && a1==0)     {      digitalWrite(8,HIGH);       digitalWrite(9,HIGH);       digitalWrite(10,HIGH);       digitalWrite(11,HIGH);            EEPROM.write(0, 1);           EEPROM.write(1, 1);           EEPROM.write(2, 1);           EEPROM.write(3, 1);                     a1=1;      delay(100);       data=0;          } if(data=='9' && a1==1)     {      digitalWrite(8,LOW);       digitalWrite(9,LOW);       digitalWrite(10,LOW);       digitalWrite(11,LOW);            EEPROM.write(0, 0);           EEPROM.write(1, 0);           EEPROM.write(2, 0);           EEPROM.write(3, 0);                     a1=0;      delay(100);       data=0;          }         }         }
